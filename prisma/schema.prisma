generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://root:seva23092005@localhost:5432/memology?schema=public"
}

model User {
  id Int @id @default(autoincrement())

  name String
  vkId BigInt @unique

  favorites Favorite[]
  likes     Like[]
  dislikes  Dislike[]
  comments  Comment[]
  memes     Meme[]
  rooms     GameRoom[] @relation("GameRoomUsers")

  ownedRooms GameRoom[]
}

model Meme {
  id Int @id @default(autoincrement())

  title       String
  image       String
  description String?

  isSuggest  Boolean @default(true)
  likesCount Int     @default(0)

  inFavorites Favorite[]
  inLikes     Like[]
  inDislikes  Dislike[]
  comments    Comment[]

  owner   User @relation(fields: [ownerId], references: [id])
  ownerId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Comment {
  id Int @id @default(autoincrement())

  text String

  user   User @relation(fields: [userId], references: [id])
  userId Int

  meme   Meme @relation(fields: [memeId], references: [id])
  memeId Int

  createdAt DateTime @default(now())
}

model Favorite {
  id Int @id @default(autoincrement())

  user   User @relation(fields: [userId], references: [id])
  userId Int

  meme   Meme @relation(fields: [memeId], references: [id])
  memeId Int

  createdAt DateTime @default(now())
}

model Like {
  id Int @id @default(autoincrement())

  user   User @relation(fields: [userId], references: [id])
  userId Int

  meme   Meme @relation(fields: [memeId], references: [id])
  memeId Int

  createdAt DateTime @default(now())
}

model Dislike {
  id Int @id @default(autoincrement())

  user   User @relation(fields: [userId], references: [id])
  userId Int

  meme   Meme @relation(fields: [memeId], references: [id])
  memeId Int

  createdAt DateTime @default(now())
}

model GameRoom {
  id String @id

  owner   User @relation(fields: [ownerId], references: [id])
  ownerId Int  @unique

  users User[] @relation("GameRoomUsers")

  data Json
}

enum GameType {
  HISTORY
}
