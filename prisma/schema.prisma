generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://root:seva23092005@localhost:5432/memology?schema=public"
}

model User {
  id Int @id @default(autoincrement())

  name String
  vkId BigInt

  favorites Favorite[]
  likes     Like[]
  dislikes  Dislike[]
}

model Meme {
  id Int @id @default(autoincrement())

  title       String
  image       String
  description String?

  isSuggest  Boolean @default(true)
  likesCount Int     @default(0)

  inFavorites Favorite[]
  inLikes     Like[]
  inDislikes  Dislike[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Favorite {
  id Int @id @default(autoincrement())

  user   User @relation(fields: [userId], references: [id])
  userId Int

  meme   Meme @relation(fields: [memeId], references: [id])
  memeId Int

  createdAt DateTime @default(now())
}

model Like {
  id Int @id @default(autoincrement())

  user   User @relation(fields: [userId], references: [id])
  userId Int

  meme   Meme @relation(fields: [memeId], references: [id])
  memeId Int

  createdAt DateTime @default(now())
}

model Dislike {
  id Int @id @default(autoincrement())

  user   User @relation(fields: [userId], references: [id])
  userId Int

  meme   Meme @relation(fields: [memeId], references: [id])
  memeId Int

  createdAt DateTime @default(now())
}
