generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://root:seva23092005@localhost:5432/memology?schema=public"
}

model User {
  id Int @id @default(autoincrement())

  name String
  vkId BigInt

  favorites Favorite[]
}

model Meme {
  id Int @id @default(autoincrement())

  title       String
  image       String
  description String?

  inFavorites Favorite[]
}

model Favorite {
  id Int @id @default(autoincrement())

  user   User @relation(fields: [userId], references: [id])
  userId Int

  meme   Meme @relation(fields: [memeId], references: [id])
  memeId Int
}
